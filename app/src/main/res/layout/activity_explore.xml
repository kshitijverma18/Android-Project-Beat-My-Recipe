<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Explore_Activity">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="@color/cardview_dark_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:id="@+id/explore_toHome_xml"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:background="@color/cardview_dark_background"
                android:src="@drawable/explore_tohome_back"
                android:layout_centerInParent="true">

            </ImageButton>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/explore_toHome_xml"
                android:layout_toLeftOf="@+id/explore_search_xml"
                android:gravity="center_horizontal"
                android:hint="Click to Search"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:id="@+id/explore_editsearch_xml"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">
            </EditText>

            <ImageButton
                android:id="@+id/explore_search_xml"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/explore_search"
                android:layout_marginRight="18dp"
                android:layout_centerInParent="true"

                android:background="@color/cardview_dark_background">

            </ImageButton>
        </RelativeLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_recycler_view_activity_xml">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>