<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:riv_oval="true"
        android:layout_marginLeft="8dp"
        android:id="@+id/comment_item_userProfile"
        android:src="@drawable/user_profile_icon">
    </com.makeramen.roundedimageview.RoundedImageView>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/comment_item_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:textColor="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:id="@+id/comment_item_user_name"
        android:layout_toRightOf="@+id/comment_item_userProfile"
        android:text="Praknam Scobe">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_item_insertComment"
        android:text="Insert comment here"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/comment_item_userProfile"
        android:layout_below="@+id/comment_item_user_name">

    </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_item_date"
        android:layout_marginRight="12dp"
        android:text="Date"
        android:layout_alignParentRight="true">
    </TextView>

</RelativeLayout>